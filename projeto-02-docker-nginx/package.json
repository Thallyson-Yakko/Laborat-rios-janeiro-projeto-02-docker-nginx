{
  "name": "react-nginx-docker",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "web-vitals": "^3.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run optimize",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "optimize": "npm run compress-images && npm run minify-html",
    "compress-images": "echo 'Compressing images...'",
    "minify-html": "echo 'Minifying HTML...'",
    "docker:build": "docker build -t react-nginx-app .",
    "docker:run": "docker run -p 8080:8080 react-nginx-app",
    "docker:compose": "docker-compose up --build"
  },
  "devDependencies": {
    "react-scripts": "5.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
